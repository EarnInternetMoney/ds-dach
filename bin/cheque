#!/bin/bash
display_usage() {
   echo "Usage: <receiver> <amount> <fee> <nonce> [expiry]"
}
if [ "$#" -ne 4 ]; then
    display_usage
    exit 0
fi


#Domain separator data
VERSION='1'
CHAIN_ID=99
ADDRESS=$DACH


DOMAIN_SEPARATOR=$(seth keccak \
     $(seth keccak $(seth --from-ascii "EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"))\
$(echo $(seth keccak $(seth --from-ascii "Dai Automated Clearing House"))\
$(seth keccak $(seth --from-ascii $VERSION))$(seth --to-uint256 $CHAIN_ID)\
$(seth --to-uint256 $ADDRESS) | sed 's/0x//g'))
echo $DOMAIN_SEPARATOR

#Permit type data
cheque_TYPEHASH=$(seth keccak $(seth --from-ascii "Cheque(address sender,address receiver,uint256 amount,uint256 fee,uint256 nonce,uint256 expiry)"))
#echo $permit_TYPEHASH

#permit data
SENDER=$ETH_FROM
RECEIVER=$1
AMOUNT=$2
FEE=$3
NONCE=${4:-0}
EXPIRY=${5:-0}

MESSAGE=0x1901\
$(echo $DOMAIN_SEPARATOR\
$(seth keccak \
$cheque_TYPEHASH\
$(echo $(seth --to-uint256 $SENDER)\
$(seth --to-uint256 $RECEIVER)\
$(seth --to-uint256 $AMOUNT)\
$(seth --to-uint256 $FEE)\
$(seth --to-uint256 $NONCE)\
$(seth --to-uint256 $EXPIRY)\
      | sed 's/0x//g')) \
      | sed 's/0x//g')
#echo "MESSAGE" $MESSAGE
SIG=$(ethsign msg --no-prefix --data $MESSAGE)
#echo $SIG
##JSON output
printf '{"cheque": {"sender":"%s","receiver":"%s","amount":"%s", "fee": "%s", "nonce": "%s", "expiry": "%s", "v": "%s", "r": "%s", "s": "%s"}}\n' "$SENDER" "$RECEIVER" "$AMOUNT" "$FEE" "$NONCE" "$EXPIRY" $((0x$(echo "$SIG" | cut -c 131-132))) $(echo "$SIG" | cut -c 1-66) "0x"$(echo "$SIG" | cut -c 67-130)
